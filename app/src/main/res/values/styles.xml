<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="rating">
        <item name="android:background">@drawable/bg_rounded_light_yellow</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="linked_text">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="secondary_info">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="main_button">
        <item name="android:background">@drawable/bg_rounded_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="additional_button">
        <item name="android:background">@drawable/bg_rounded_light_blue</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="input_layout">
        <item name="android:background">@drawable/bg_rounded_gray</item>
        <item name="android:textColorHint">#A9ABB7</item>
    </style>
</resources>